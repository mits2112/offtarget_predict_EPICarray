mat_rel_breaks <- seq(-5, 5, length.out = 1000)

# sorting clusters
sort_hclust <- function(...) as.hclust(dendsort(as.dendrogram(...)))

# col order
xmat_rel_log2_col_ordered <- xmat_rel_log2[,c(1,3,2,4)]

# row order
